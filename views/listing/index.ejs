<% layout('/layout/boilerPlate') -%>
<body>
    <!-- <h3>All Listing</h3> -->
    <!-- <form action="/listing/new" method="get">
        <button>Create Listing</button>
    </form> -->
    <style>
        .filters{
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            min-height: 3rem;
        }
        .filter{
            text-align: center;
            margin-top: 0.5rem;
            margin-bottom: 0.5rem;
            opacity: 0.7;
            margin-right: 2.5rem;
        }

        .filter:hover{
            opacity: 1;
            cursor: pointer;
            border-bottom: 1px solid black;
            
        }
        .filter p{
            margin: 0;
        }
        .taxes{
            display: none;
        }
        .tax-toggle{
            display: flex;
            align-items: center;
            padding: 0.6rem;
            border: 1px solid black;
            border-radius: 1rem;
        }
    </style>
    <div class="container-fluid filters mb-4">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Pool</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tractor"></i></div>
            <p>Farmsvilla</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-ferry"></i></div>
            <p>Boats</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Igloo</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tree"></i></div>
            <p>Snowfall</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Mountain-City</p>
        </div>
        <div class="tax-toggle mt-2 ms-auto btn btn-outline-lightdark">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
                <label class="form-check-label" for="flexSwitchCheckReverse">Display total before taxes</label>
            </div>
        </div>
    </div>
    <div class="row row-cols-xl-4 row-cols-lg-3  row-cols-md-2 row-cols-sm-1 card-box offset-0.5 mt-3">
        <%for(let listing of data){%>
            <a href="/listing/<%=listing._id%>" class="listing-link">
                <div class="card listing-card col">
                    <img src="<%=listing.img.url%>" class="card-img-top" alt="img" style="height: 20rem;">
                    <div class="card-img-overlay">
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%=listing.title%></b><br>
                            &#x20b9;<%= listing.price.toLocaleString("en-IN") %>/night
                            <i class="taxes">&nbsp; &nbsp; +18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
        <%}%>
    </div>
    <!-- <ul>
        <%for(let listing of data){%>
            <li><a href="/listing/<%=listing._id%>"><%=listing.title%></a></li>
        <%}%>
    </ul> -->
</body>

<script>
    let toggle=document.getElementById("flexSwitchCheckReverse");
    toggle.addEventListener("click", ()=>{
        console.dir(toggle);
        let taxes=document.getElementsByClassName("taxes");
        for(let tax of taxes){
            if(tax.style.display!="inline"){
                tax.style.display="inline";
            }else{
                tax.style.display="none";
            }
        }
    })
</script>